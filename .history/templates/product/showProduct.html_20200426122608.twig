{% extends 'base.html.twig' %}

{% block title %}Les abeilles:{{product.name}}!
{% endblock %}
{% block monTitre %}
	{{product.name}}
{% endblock %}

{% block body %}
	<section class=" container productslist my-5 col-lg-9 text-center">

		<div class="card mt-4">
			<div class="d-flex justify-content-center">
				<img class="card-img-top img-fluid" src="{{asset('images/miel/' ~ product.image)}}" alt="image pot de {{product.name}}" style="width:40%; height: 50vh">
			</div>
			<div class="card-body">
				<a href="{{path('show_product',{'id': product.id})}}">
					<h3 class="card-title">{{product.name}}</h3>
				</a>
				<h4>{{product.price| format_currency('EUR')}}</h4>
				<p class="card-text">{{product.description}}</p>
				<button class="btn btn-primary col">Ajouter au panier</button>
			</div>
		</div>

	</section>

{% endblock %}
