{% extends 'base.html.twig' %}

{% block title %}Connexion!
{% endblock %}

{% block monTitre %}Connexion à votre espace membre
{% endblock %}
{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-12">
				<div class="panel panel-default my-5 d-flex justify-content-center flex-column">
					<div class="panel-heading">
						<h3 class="panel title text-center">Veuillez vous connecter</h3>
					</div>
					<div class="panel-body">
						<form action="{{path('login')}}" method="POST">
							<fieldset>
								<div class="form-group">
									<input type="text" class="form-control" placeholder="Nom d'utilisateur" required name="_username" value="{{lastUserName}}">
								</div>
								<div class="form-group">
									<input type="password" class="form-control" placeholder="Mot de passe" required name="_password">
								</div>
								<button class="col-12 btn btn-primary btn-lock text-center">
									Me connecter
								</button>
								{% if error %}
									<div class="alert alert-warning mt-5 text-center">
										<p>Authentification echouée</p>
									</div>
								{% endif %}
							</fieldset>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
